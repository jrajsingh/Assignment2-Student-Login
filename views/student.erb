<div style="padding: 15px" id="body">
  <br/>
  <br/>
  <style>
    #student_table, #user_input_student {
      width: 100%;
    }

    #student_table th, td {
      padding: 15px;
      text-align: left;
      border: 1px solid black;
    }

    #user_input_student th, td {
      padding: 15px;
      text-align: left;
      border: 1px solid black;
    }
  </style>
  <% if @my_students != nil %>
    <h1>List of Students</h1>
    <table id="student_table">
      <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Birthday</th>
        <th>Address</th>
        <th>GPA</th>
        <th>Edit Student</th>
        <th>Delete Student</th>
      </tr>
      <% @my_students.each do |stu| %>
        <tr>
          <td><a href="/students_display?student_id=<%= stu.id_num %>"><%= stu.id_num %></a></td>
          <td><%= stu.first_name %></td>
          <td><%= stu.last_name %></td>
          <td><%= stu.birthday %></td>
          <td><%= stu.address %></td>
          <td><%= stu.gpa %></td>
          <td><a href="/students_edit?student_id=<%= stu.id_num %>">Edit</a></td>
          <td><a href="/students_delete?student_id=<%= stu.id_num %>">Delete</a></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <h1 style="text-align: center;">There are no Students in the database!!</h1>
  <% end %>
  <br/>
  <br/>
  <hr>
  <br/>
  <br/>
  <div>
    <h1>Add a new Student!!</h1>
    <form action="/students" method="get">
      <table id="user_input_student">
        <tr>
          <th>Student ID :</th>
          <td>
            <input id="student_id" type="text" name="student_id" placeholder="Student ID ..." style="width: 100%;">
          </td>
        </tr>
        <tr>
          <th>Student's First name :</th>
          <td>
            <input id="student_first_name" type="text" name="student_first_name" placeholder="Student's First Name ..." style="width: 100%;">
          </td>
        </tr>
        <tr>
          <th>Student's Last name :</th>
          <td>
            <input id="student_last_name" type="text" name="student_last_name" placeholder="Student's Last Name ..." style="width: 100%;">
          </td>
        </tr>
        <tr>
          <th>Student's Birthday :</th>
          <td>
            <input id="student_birthday" type="date" name="student_birthday" placeholder="Student's Birthday" style="width: 100%;">
          </td>
        </tr>
        <tr>
          <th>Student's Address :</th>
          <td>
            <input id="student_address" type="text" name="student_address" placeholder="Student's Address" style="width: 100%;">
          </td>
        </tr>
        <tr>
          <th>Student's GPA : </th>
          <td>
            <input id="student_gpa" type="text" name="student_gpa" placeholder="0.00" style="width: 100%">
          </td>
        </tr>
      </table>
      <br/>
      <button type="submit">Add Student</button>
    </form>
  </div>
</div>
